    file: str = typer.Argument(..., help="ğŸ“„ Path to the trace file to view"),
):
    return run_command(["npx", "playwright", "show-trace", file], "Opening Playwright trace viewer")


add_command_and_aliases(
    trace,
    "trace",
    ["tr", "view-trace"],
    help="ğŸ” Open Playwright trace viewer for test recordings",
)


def install(
    sync: bool = typer.Option(False, "--sync", "-s", help="ğŸ”„ Sync dependencies without reinstalling", is_flag=True),
):
    install_info = Text()
    install_info.append("ğŸ Python: ", style="bold yellow")
    install_info.append("uv sync", style="blue")
    install_info.append("\nğŸŸ¢ Node.js: ", style="bold yellow")
    install_info.append("npm ci" if sync else "npm install", style="blue")

    panel = Panel(
        install_info, title="ğŸ“¦ Installing Dependencies", title_align="left", border_style="bright_cyan", padding=(1, 2)
    )
    console.print(panel)

    uv_command = ["uv", "sync"]
    if run_command(uv_command, "Installing Python dependencies") != 0:
        raise typer.Exit(1)

    if sync:
        npm_command = ["npm", "ci"]
    else:
        npm_command = ["npm", "install"]

    if run_command(npm_command, "Installing Node.js dependencies") != 0:
        raise typer.Exit(1)

    success_panel = Panel(
        "[bold green]âœ… All dependencies installed successfully![/bold green]\n[dim green]Ready to build and run! ğŸ‰[/dim green]",
        border_style="green",
        padding=(1, 2),
    )
    console.print(success_panel)
    return 0


add_command_and_aliases(
    install,
    "install",
    ["i", "deps"],
    help="ğŸ“¦ Install Python and Node.js dependencies",
)


def precommit_install():
    """ğŸª Install pre-commit hooks"""
    rerun_in_uv()

    console.print("[bold magenta]ğŸª Installing pre-commit hooks...[/bold magenta]")

    if run_command(["uv", "run", "pre-commit", "install"], "Installing pre-commit hooks") != 0:
        raise typer.Exit(1)

    console.print("[bold green]âœ… Pre-commit hooks installed successfully![/bold green]")
    console.print("[dim yellow]ğŸ’¡ Hooks will now run automatically before each commit[/dim yellow]")
    return 0


add_command_and_aliases(
    precommit_install,
    "precommit-install",
    ["pc-install", "hooks-install"],
    help="ğŸª Install pre-commit hooks into git repository",
)


def precommit_run(
    all_files: bool = typer.Option(
        False, "--all-files", "-a", help="ğŸ”„ Run on all files instead of just changed files"
    ),
    hook: str = typer.Option(None, "--hook", "-h", help="ğŸ¯ Run specific hook by name"),
):
    """ğŸª Run pre-commit hooks manually"""
    rerun_in_uv()

    cmd = ["uv", "run", "pre-commit", "run"]

    if all_files:
        cmd.append("--all-files")

    if hook:
        cmd.append(hook)

    description = "Running pre-commit hooks"
    if all_files:
        description += " on all files"
    if hook:
        description += f" for hook: {hook}"

    return run_command(cmd, description)


add_command_and_aliases(
    precommit_run,
    "precommit",
    ["pc", "hooks"],
    help="ğŸª Run pre-commit hooks manually",
)


def precommit_update():
    """ğŸ”„ Update pre-commit hook versions"""
    rerun_in_uv()

    return run_command(["uv", "run", "pre-commit", "autoupdate"], "Updating pre-commit hook versions")


add_command_and_aliases(
    precommit_update,
    "precommit-update",
    ["pc-update", "hooks-update"],
    help="ğŸ”„ Update pre-commit hook versions to latest",
)


def setup():
    """ğŸ¬ First-time setup wizard for Raddle Teams"""

    console.print()
    console.print(
        Panel.fit(
            "[bold bright_white]ğŸ² Raddle Teams Setup Wizard[/bold bright_white]\n"
            "[dim]Let's get your development environment ready![/dim]",
            border_style="bright_blue",
        )
    )
    console.print()

    # Check if .env already exists
    env_file = PROJECT_ROOT / ".env"
    if env_file.exists():
        console.print("[yellow]âš ï¸  .env file already exists![/yellow]")
        overwrite = typer.confirm("Do you want to reconfigure it?", default=False)
        if not overwrite:
            console.print("[dim]Skipping .env configuration...[/dim]")
        else:
            env_file.unlink()

    if not env_file.exists():
        console.print("[bold bright_cyan]ğŸ“ Step 1: Environment Configuration[/bold bright_cyan]")
        console.print("[dim]We need to set up your environment variables.[/dim]\n")

        # Prompt for environment
        console.print("[bold]Select environment:[/bold]")
        console.print("  [cyan]1.[/cyan] development (default)")
        console.print("  [cyan]2.[/cyan] testing")
        console.print("  [cyan]3.[/cyan] production")
        env_choice = typer.prompt("Choice", default="1")

        env_map = {"1": "development", "2": "testing", "3": "production"}
        raddle_env = env_map.get(env_choice, "development")

        # Prompt for admin token
        console.print()
        console.print("[bold]Admin Token:[/bold]")
        console.print("[dim]This token is used for admin authentication.[/dim]")
        console.print("[dim]Example: my-secret-admin-token-12345[/dim]")
        admin_token = typer.prompt("Enter admin token")

        # Write .env file
        env_content = f"""# Raddle Teams Environment Configuration
# Generated by setup wizard

RADDLE_ENV={raddle_env}
ADMIN_TOKEN={admin_token}
"""
        env_file.write_text(env_content)
        console.print(f"[green]âœ… Created .env file with {raddle_env} configuration[/green]\n")

    # Install dependencies
    console.print("[bold bright_cyan]ğŸ“¦ Step 2: Installing Dependencies[/bold bright_cyan]")
    console.print("[dim]This may take a few minutes...[/dim]\n")

    # Run install command
    result = run_command(["uv", "sync"], "Installing Python dependencies")

    if result != 0:
        console.print("[bold red]âŒ Failed to install Python dependencies[/bold red]")
        raise typer.Exit(1)

    result = run_command(["npm", "install"], "Installing JavaScript dependencies")

    if result != 0:
        console.print("[bold red]âŒ Failed to install JavaScript dependencies[/bold red]")
        raise typer.Exit(1)

    # Success message
    console.print()
    console.print(
        Panel(
            "[bold green]âœ… Setup Complete![/bold green]\n\n"
            "[bold bright_white]Next steps:[/bold bright_white]\n"
            "  [cyan]1.[/cyan] Run [bold]./rt server[/bold] to start the application\n"
            "  [cyan]2.[/cyan] Open [bold]http://localhost:8000[/bold] in your browser\n"
            "  [cyan]3.[/cyan] Run [bold]./rt --help[/bold] to see all available commands\n\n"
            "[dim]Happy coding! ğŸš€[/dim]",
            border_style="bright_green",
            title="ğŸ‰ Success",
        )
    )

    return 0


add_command_and_aliases(
    setup,
    "setup",
    ["init"],
    help="ğŸ¬ First-time setup wizard",
)


def sync_raddles():
    """ğŸ”„ Sync Raddle games from the raddle website by running scripts in the puzzles_from_raddle folder"""

    console.print("[bold magenta]ğŸ”„ Syncing Raddle games...[/bold magenta]")

    puzzles_dir = PROJECT_ROOT / "puzzles_from_raddle"

    result = run_command(["python", "pull_down_raddles.py"], "Pulling down Raddle games", cwd=puzzles_dir)
    if result != 0:
        return result

    return run_command(["python", "convert_yaml_to_json.py"], "Converting Raddle YAML to JSON", cwd=puzzles_dir)


add_command_and_aliases(
    sync_raddles,
    "sync-raddles",
    ["rs", "raddles-sync"],
    help="ğŸ”„ Sync Raddle games from the Raddle website",
)


def version_callback(value: bool):
    if value:
        banner = Text()
        banner.append("ğŸ² ", style="bold red")
        banner.append("Raddle Teams", style="bold bright_white")
        banner.append(" Command Runner", style="bold blue")
        banner.append("\nğŸ“‹ Version: ", style="bold bright_yellow")
